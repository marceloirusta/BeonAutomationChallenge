				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"const res = pm.response.json()",
							"",
							"pm.test(\"Response body has a TokenString property\", function () {",
							"  pm.expect(res).to.have.property('TokenString');",
							"});",
							"",
							"pm.test(\"Response body has a UserEmail property\", function () {",
							"  pm.expect(res).to.have.property('UserEmail');",
							"});",
							"",
							"pm.test(\"Response body has a ExpirationTime property\", function () {",
							"  pm.expect(res).to.have.property('ExpirationTime');",
							"});",
